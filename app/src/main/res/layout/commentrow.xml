<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:backgroundTint="#fff"
    android:elevation="21dp"
    app:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:paddingRight="1dp"
        android:paddingEnd="1dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commentbody"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/commentorsname"
                android:gravity="start"
                android:padding="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/commentorsname"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="bottom|start"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:layout_alignParentStart="true"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/commentcreateddate"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_below="@id/commentbody"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/commentorsname"
                android:gravity="bottom|end"
                android:text="@string/app_name"
                android:textColor="@color/colorAccent"

                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/commentorsname"
                android:textStyle="normal" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>